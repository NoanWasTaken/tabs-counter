{
  "manifest_version": 2,
  "name": "Compteur d'Onglets",
  "version": "1.0",
  "description": "Affiche le nombre d'onglets ouverts dans Firefox",
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "window-tabs.svg"
  }
}
