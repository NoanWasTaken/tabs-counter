{
  "manifest_version": 2,
  "name": "Tabs counter",
  "version": "1.0",
  "description": "Displays the number of open tabs in your browser.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/window-tabs.png"
  }
}